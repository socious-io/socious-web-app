{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom",
      "@types/testing-library__jest-dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@icons/*": ["asset/icons/*"],
      "@components/*": ["components/*"],
      "@hooks": ["hooks/index.ts"],
      "@models/*": ["models/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": ["index.d.ts", "**/*.ts", "**/*.tsx", "jest-setup.ts"],
  "exclude": [
    "**/*.test.tsx",
    "node_modules",
    "next-env.d.ts",
    "dist",
    "webpack",
    "jest",
    "cypress"
  ]
}
