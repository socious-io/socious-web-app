{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@icons/*": [
        "asset/icons/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@hooks": [
        "hooks/index.ts"
      ],
      "@models/*": [
        "models/*"
      ],
      "@api/*": [
        "api/*"
      ]
    }
  },
  "include": [
    "index.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "next-env.d.ts",
    "dist"
  ]
}
